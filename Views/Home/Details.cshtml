@model Pizza

@{
	ViewData["Title"] = @Model.Name;
}

<div class="container"></div>

<script>
axios.get("/api/pizzas/getpizza", { params: { id: @Model.PizzaId } })
		.then(function(res) {
			const pizza = res.data;
            console.log(pizza);
            debugger;
			document.querySelector('.container').innerHTML =`
			<h2>${pizza.name}</h2>
			<img src="${pizza.imgPath}"/>
			<div>${pizza.price}</div>
			<p>${pizza.description}</p>
			<div>${pizza.category ? pizza.category.name : ""}</div>`;
		});
</script>