@{
	ViewData["Title"] = "Categorie";
}

@model List<Category>

<div class="container">
	<h1>Categorie</h1>
	<table class="table table-striped table-dark">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Category</th>
				<th scope="col">Handle</th>
			</tr>
		</thead>
		<tbody>
			@foreach (Category category in Model)
			{
				<tr>
					<th scope="row">@category.CategoryId</th>
					<td>@category.Name</td>
					<td class="d-flex">
						<a class="btn btn-primary me-2" asp-controller="Categories" asp-action="Edit" asp-route-id="@category.CategoryId">Edit</a>
						<form asp-controller="Categories" asp-action="Delete" asp-route-id="@category.CategoryId" method="post">
							@Html.AntiForgeryToken()
							<button class="btn btn-danger">Delete</button>
						</form>
					</td>
				</tr>
			}
		</tbody>
	</table>
	<div class="mt-3">
		<a class="btn btn-primary" asp-controller="Categories" asp-action="Create">Add</a>
	</div>
</div>
